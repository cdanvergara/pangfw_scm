# =============================================================================
# Example Terraform Variables Configuration
# Palo Alto Next Generation Firewall on Azure - Multi-Region
# =============================================================================

# =============================================================================
# IMPORTANT: Security Notice
# =============================================================================
# This is an example configuration file. 
# DO NOT commit real values to version control.
# Copy this file to terraform.tfvars and update with your actual values.
# Add terraform.tfvars to your .gitignore file.
# =============================================================================

# =============================================================================
# General Configuration
# =============================================================================

# Your Azure subscription ID (REQUIRED)
# subscription_id = "12345678-1234-1234-1234-123456789abc"

# Project name used for resource naming
project_name = "pangfw"

# Environment (dev, test, prod)
environment = "prod"

# =============================================================================
# Region Configuration (Customizable)
# =============================================================================

# Primary region for NGFW deployment
primary_region = "East US"
primary_region_short = "eus"

# Secondary region for NGFW deployment  
secondary_region = "Central US"
secondary_region_short = "cus"

# Alternative region configurations (uncomment to use):
# For West US and East US:
# primary_region = "West US"
# primary_region_short = "wus"
# secondary_region = "East US"  
# secondary_region_short = "eus"

# For Europe (West Europe and North Europe):
# primary_region = "West Europe"
# primary_region_short = "weu"
# secondary_region = "North Europe"
# secondary_region_short = "neu"

# For Asia Pacific (Southeast Asia and East Asia):
# primary_region = "Southeast Asia"
# primary_region_short = "sea"
# secondary_region = "East Asia"
# secondary_region_short = "ea"

# Availability zones for high availability
availability_zones = ["1", "2", "3"]

# =============================================================================
# Existing Infrastructure (REQUIRED)
# =============================================================================

# Resource group containing your existing Virtual WAN
existing_vwan_resource_group = "existing-vwan-rg"

# Name of your existing Virtual WAN
existing_vwan_name = "my-virtual-wan"

# Name of your existing Virtual Hub in primary region
existing_vhub_primary_name = "my-hub-eastus"

# Name of your existing Virtual Hub in secondary region  
existing_vhub_secondary_name = "my-hub-centralus"

# =============================================================================
# Strata Cloud Manager Configuration (REQUIRED)
# =============================================================================

# Strata Cloud Manager tenant ID that will manage firewall policies
# This is the tenant ID (not display name) from apps.paloaltonetworks.com
# You can find this in the URL after login or in Settings → Account → Tenant Information
strata_cloud_manager_tenant_name = "your-scm-tenant-id"

# Optional: Marketplace configuration (defaults are usually fine)
# marketplace_offer_id = "pan_swfw_cloud_ngfw"
# plan_id = "panw-cngfw-payg"

# =============================================================================
# Network Configuration (Optional)
# =============================================================================

# Trusted address ranges for the network (optional)
trusted_address_ranges = [
  "10.0.0.0/8",     # Private networks
  "172.16.0.0/12",  # Private networks  
  "192.168.0.0/16"  # Private networks
]

# Enable custom DNS configuration
enable_custom_dns = false

# =============================================================================
# Destination NAT Configuration (Optional)
# =============================================================================

# Configure destination NAT rules if needed
# destination_nat_rules = [
#   {
#     name     = "web-server-nat"
#     protocol = "TCP"
#     backend_configs = [
#       {
#         port               = 80
#         public_ip_address  = "10.0.1.100"
#       }
#     ]
#     frontend_configs = [
#       {
#         port                  = 80
#         public_ip_address_id  = azurerm_public_ip.primary_ngfw.id
#       }
#     ]
#   }
# ]



# =============================================================================
# Routing Configuration
# =============================================================================

# Routing policies for traffic direction
routing_policies = [
  {
    name         = "InternetTraffic"
    destinations = ["Internet"]
  },
  {
    name         = "PrivateTraffic"  
    destinations = ["PrivateTraffic"]
  }
]

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Enable Log Analytics workspace for monitoring
enable_monitoring = true

# Log Analytics SKU
log_analytics_sku = "PerGB2018"

# Log retention period in days
log_retention_days = 30

# =============================================================================
# Security Configuration
# =============================================================================

# Create Network Security Group for management access
create_management_nsg = true

# IP addresses allowed for management access
# IMPORTANT: Change this for production - do not use 0.0.0.0/0
management_allowed_ips = [
  "203.0.113.0/24",    # Replace with your office IP range
  "198.51.100.0/24"    # Replace with your home IP range
]

# =============================================================================
# Advanced Configuration
# =============================================================================

# Enable DDoS protection
enable_ddos_protection = true

# Custom DNS servers (optional)
custom_dns_servers = []

# Backup region for disaster recovery
backup_region = "West US 2"

# Enable backup configuration
enable_backup = false

# Performance settings
throughput_capacity = 1    # Gbps
session_capacity = 100     # Thousands of sessions

# =============================================================================
# Cost Management
# =============================================================================

# Enable auto-shutdown for dev/test environments
enable_auto_shutdown = false

# Auto-shutdown time (HH:MM format, 24-hour)
auto_shutdown_time = "19:00"

# =============================================================================
# Resource Tagging
# =============================================================================

# Additional tags for all resources
tags = {
  Owner       = "Network-Team"
  CostCenter  = "IT-Security"
  Compliance  = "SOC2"
  Backup      = "Required"
  Monitoring  = "Enabled"
}

